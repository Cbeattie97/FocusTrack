<div class="bg-white p-4 rounded-lg shadow">
  <h3 class="text-lg font-semibold mb-2">{{title}}</h3>
  <p class="text-sm text-gray-600 mb-3">{{description}}</p>
  <div class="flex justify-between items-center mb-3">
    <span class="text-sm font-medium px-2 py-1 rounded
      {{#if (eq priority 'high')}}
        bg-red-100 text-red-600
      {{else if (eq priority 'medium')}}
        bg-blue-100 text-blue-600
      {{else}}
        bg-green-100 text-green-600
      {{/if}}">
      {{priority}} Priority
    </span>
    <div class="flex -space-x-2">
      {{#each assignees}}
        <img src="{{avatar}}" alt="{{name}}" class="w-6 h-6 rounded-full border-2 border-white">
      {{/each}}
      <button class="w-6 h-6 rounded-full bg-gray-200 flex items-center justify-center text-gray-600 text-xs">+</button>
    </div>
  </div>
  <div class="flex items-center text-sm text-gray-500">
    <span class="mr-4">{{comments_count}} ðŸ’¬</span>
    <span class="mr-4">{{attachments_count}} ðŸ“Ž</span>
    <span>{{due_date}}</span>
  </div>
</div>