<div id="task-{{id}}" class="task-card p-3 rounded-lg shadow transition-colors duration-300 ease-in-out {{#if (eq status 'Completed')}}bg-green-50{{else}}bg-white{{/if}}">
  <h3 class="text-md font-semibold mb-1">{{title}}</h3>
  <p class="text-xs text-gray-600 mb-2">{{description}}</p>
  <div class="flex justify-between items-center text-xs">
    <select onchange="updateTaskStatus('{{id}}', this.value)" class="text-xs border rounded px-1 py-0.5">
      <option value="Todo" {{#if (eq status 'Todo')}}selected{{/if}}>Todo</option>
      <option value="In Progress" {{#if (eq status 'In Progress')}}selected{{/if}}>In Progress</option>
      <option value="Completed" {{#if (eq status 'Completed')}}selected{{/if}}>Completed</option>
    </select>
    <span class="font-medium px-2 py-0.5 rounded
      {{#if (eq priority 1)}}
        bg-red-100 text-red-600
      {{else if (eq priority 2)}}
        bg-yellow-100 text-yellow-600
      {{else}}
        bg-green-100 text-green-600
      {{/if}}">
      {{#if (eq priority 1)}}High{{else if (eq priority 2)}}Medium{{else}}Low{{/if}}
    </span>
  </div>
  <div class="flex justify-between items-center mt-2 text-xs">
    <button onclick="showEditTaskModal('{{id}}')" class="text-blue-500 hover:text-blue-700">
      Edit
    </button>
    <button onclick="deleteTask('{{id}}')" class="text-red-500 hover:text-red-700">
      Delete
    </button>
    <span class="text-gray-500">Due: {{formatDate due_date}}</span>
  </div>
</div>