<div class="flex min-h-screen bg-gray-100">
  <!-- Hero Section -->
  <div class="hidden lg:flex items-center justify-center w-1/2 bg-blue-600">
    <div class="max-w-md text-center">
      <h1 class="text-4xl font-bold text-white mb-6">Welcome to FOCUSTRACK</h1>
      <p class="text-xl text-blue-200 mb-8">Organize, track, and collaborate on tasks with ease.</p>
    </div>
  </div>

  <!-- Login/Signup Form Section -->
  <div class="flex items-center justify-center w-full lg:w-1/2">
    <div class="px-8 py-6 mt-4 text-left bg-white shadow-lg rounded-lg w-full max-w-md">
      <div class="flex justify-center mb-6">
        <button id="showLogin" class="px-4 py-2 font-semibold text-blue-600 border-b-2 border-blue-600">Login</button>
        <button id="showSignup" class="px-4 py-2 font-semibold text-gray-500">Sign Up</button>
      </div>

      <!-- Login Form -->
      <form id="loginForm" action="/login" method="POST">
        <div class="mt-4">
          <div>
            <label class="block" for="loginEmail">Email</label>
            <input type="email" placeholder="Email"
              class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600"
              name="email" id="loginEmail" required>
          </div>
          <div class="mt-4">
            <label class="block" for="loginPassword">Password</label>
            <input type="password" placeholder="Password"
              class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600"
              name="password" id="loginPassword" required>
          </div>
          <div class="flex items-center justify-between mt-4">
            <div>
              <input type="checkbox" name="remember" id="remember" class="mr-2">
              <label for="remember">Remember me</label>
            </div>
            <a href="#" class="text-sm text-blue-600 hover:underline">Forgot password?</a>
          </div>
          <div class="flex items-center justify-center mt-6">
            <button type="submit"
              class="px-6 py-2 text-white bg-blue-600 rounded-lg hover:bg-blue-900 transition-colors duration-300">Login</button>
          </div>
        </div>
      </form>

      <!-- Signup Form -->
      <form id="signupForm" action="/signup" method="POST" class="hidden">
        <div class="mt-4">
          <div>
            <label class="block" for="signupName">Full Name</label>
            <input type="text" placeholder="Full Name"
              class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600"
              name="name" id="signupName" required>
          </div>
          <div class="mt-4">
            <label class="block" for="signupEmail">Email</label>
            <input type="email" placeholder="Email"
              class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600"
              name="email" id="signupEmail" required>
          </div>
          <div class="mt-4">
            <label class="block" for="signupPassword">Password</label>
            <input type="password" placeholder="Password"
              class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600"
              name="password" id="signupPassword" required>
          </div>
          <div class="mt-4">
            <label class="block" for="signupConfirmPassword">Confirm Password</label>
            <input type="password" placeholder="Confirm Password"
              class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600"
              name="confirmPassword" id="signupConfirmPassword" required>
          </div>
          <div class="flex items-center justify-center mt-6">
            <button type="submit"
              class="px-6 py-2 text-white bg-blue-600 rounded-lg hover:bg-blue-900 transition-colors duration-300">Sign Up</button>
          </div>
        </div>
      </form>

      {{#if error}}
      <div class="mt-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded">
        {{error}}
      </div>
      {{/if}}
    </div>
  </div>
</div>

<script>
  const loginForm = document.getElementById('loginForm');
  const signupForm = document.getElementById('signupForm');
  const showLoginBtn = document.getElementById('showLogin');
  const showSignupBtn = document.getElementById('showSignup');

  showLoginBtn.addEventListener('click', () => {
    loginForm.classList.remove('hidden');
    signupForm.classList.add('hidden');
    showLoginBtn.classList.add('text-blue-600', 'border-b-2', 'border-blue-600');
    showLoginBtn.classList.remove('text-gray-500');
    showSignupBtn.classList.remove('text-blue-600', 'border-b-2', 'border-blue-600');
    showSignupBtn.classList.add('text-gray-500');
  });

  showSignupBtn.addEventListener('click', () => {
    signupForm.classList.remove('hidden');
    loginForm.classList.add('hidden');
    showSignupBtn.classList.add('text-blue-600', 'border-b-2', 'border-blue-600');
    showSignupBtn.classList.remove('text-gray-500');
    showLoginBtn.classList.remove('text-blue-600', 'border-b-2', 'border-blue-600');
    showLoginBtn.classList.add('text-gray-500');
  });
</script>